{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "es2015",
            "es7",
            "es2016",
            "es2017",
            "dom",
            "webworker",
            "scripthost",
            "es2015.core",
            "es2015.collection",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.proxy",
            "es2015.reflect",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "es2016.array.include",
            "es2017.object",
            "es2017.sharedmemory"
        ],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types/"
        ],
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "declaration": true,
        "watch": false
    },
    "compileOnSave": false,
    "exclude": [
        ".vscode",
        "node_modules",
        "dist"
    ],
    "baseUrl": "types",
    "typeRoots": [
        "types"
    ]
}