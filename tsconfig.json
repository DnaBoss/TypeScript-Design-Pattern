{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "es2015",
            "es7",
            "es2016",
            "es2017",
            "dom"
        ],
        "types": ["node"],
        "noImplicitAny": true,
        "strictNullChecks": false,
        "moduleResolution": "node",
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types/"
        ],
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "declaration": true,
        "watch": false
    },
    "compileOnSave": true,
    "exclude": [
        ".vscode",
        "node_modules",
        "dist",
        "typings"
    ],
    "baseUrl": "types",
    "typeRoots": [
        "types"
    ]
}